<% layout("layouts/boilerplate") %>

<div class="row justify-content-center mt-5">
  <div class="col-lg-5 col-md-7">
    
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-5">
        
        <div class="text-center mb-4">
          <i class="fa-solid fa-shield-halved text-primary" style="font-size: 3rem;"></i>
          <h3 class="mt-3 fw-bold">Enter Verification Code</h3>
          <p class="text-muted">We sent a 6-digit code to your email</p>
          <p class="fw-semibold text-primary"><%= email %></p>
        </div>

        <form action="/verify-code" method="POST">
          
          <input type="hidden" name="email" value="<%= email %>">
          
          <div class="mb-4">
            <label for="code" class="form-label fw-semibold">Verification Code</label>
            <input 
              type="text" 
              class="form-control form-control-lg text-center" 
              id="code" 
              name="code" 
              placeholder="000000"
              maxlength="6"
              pattern="[0-9]{6}"
              style="letter-spacing: 10px; font-size: 1.5rem; font-weight: 600;"
              required
              autofocus
            >
            <small class="text-muted">Enter the 6-digit code from your email</small>
          </div>

          <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill mb-3">
            <i class="fa-solid fa-check me-2"></i>
            Verify Code
          </button>

          <div class="text-center">
            <a href="/forgot-password" class="text-decoration-none">
              <i class="fa-solid fa-arrow-left me-1"></i>
              Back to Forgot Password
            </a>
          </div>

        </form>

        <div class="text-center mt-4 pt-4 border-top">
          <p class="text-muted mb-2">Didn't receive the code?</p>
          <a href="/forgot-password" class="text-decoration-none fw-semibold">
            Resend Code
          </a>
        </div>

      </div>
    </div>

  </div>
</div>
