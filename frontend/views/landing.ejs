<% layout("layouts/boilerplate") %>

<style>
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  .landing-container {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Background with listings */
  .listings-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    padding: 10px;
    filter: blur(8px);
    opacity: 0.3;
  }

  .bg-listing-item {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  /* Transparent overlay */
  .landing-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255,255,255,0.85) 0%, rgba(255,255,255,0.75) 100%);
    z-index: 1;
  }

  /* Content */
  .landing-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 40px 20px;
    max-width: 600px;
  }

  .landing-logo {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #667eea;
  }

  .landing-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #333;
    letter-spacing: -1px;
  }

  .landing-subtitle {
    font-size: 1.3rem;
    color: #666;
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .landing-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .landing-btn {
    padding: 16px 40px;
    font-size: 1.1rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .btn-signup {
    background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
    color: white;
  }

  .btn-signup:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(8, 145, 178, 0.4);
    color: white;
  }

  .btn-login {
    background: white;
    color: #0891b2;
    border: 2px solid #0891b2;
  }

  .btn-login:hover {
    background: #0891b2;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(8, 145, 178, 0.3);
  }

  .btn-explore {
    background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
    color: white;
  }

  .btn-explore:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(8, 145, 178, 0.4);
    color: white;
  }

  @media (max-width: 768px) {
    .listings-background {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .landing-title {
      font-size: 2.5rem;
    }
    
    .landing-subtitle {
      font-size: 1.1rem;
    }
    
    .landing-logo {
      font-size: 3rem;
    }
  }
</style>

<!-- Background with blurred listings -->
<div class="listings-background">
  <% if (sampleListings && sampleListings.length > 0) { %>
    <% for (let i = 0; i < Math.min(12, sampleListings.length); i++) { %>
      <img src="<%= sampleListings[i].image.url %>" 
           alt="listing" 
           class="bg-listing-item">
    <% } %>
  <% } else { %>
    <% for (let i = 0; i < 12; i++) { %>
      <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=400" 
           alt="placeholder" 
           class="bg-listing-item">
    <% } %>
  <% } %>
</div>

<!-- Transparent overlay -->
<div class="landing-overlay"></div>

<!-- Main content -->
<div class="landing-container">
  <div class="landing-content">
    <div class="landing-logo">
      <i class="fa-solid fa-compass"></i>
    </div>
    
    <h1 class="landing-title">WanderLust</h1>
    
    <p class="landing-subtitle">
      Discover amazing places to stay around the world
    </p>
    
    <% if (typeof currUser === 'undefined' || !currUser) { %>
      <div class="landing-buttons">
        <a href="/signup" class="landing-btn btn-signup">
          Sign Up
        </a>
        <a href="/login" class="landing-btn btn-login">
          Login
        </a>
      </div>
    <% } else { %>
      <div class="landing-buttons">
        <a href="/listings" class="landing-btn btn-explore">
          Explore Listings
        </a>
      </div>
    <% } %>
  </div>
</div>
